<h2>Categories List:</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">New categorie</button></a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <a href="/admin/categories/edit/{{id}}"><button class="btn btn-success mt-3">Edit categorie</button></a>
            <form action="/admin/categories/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete categorie</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nothing!</h4>
{{/each}}